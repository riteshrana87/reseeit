@import "noviah";

@vidusiLogoBasicHeight: 150px;

/*********Modified Standards******************/
.dropdown-menu > li > a:hover,
.dropdown-menu > li > a:focus {
  text-decoration: none;
  color: @colorWhite;
  background-color: @colorOne;
}

.nav-tabs {
  border-bottom: 1px solid @colorOne;
}

.nav-tabs > li > a:hover {
  border-color: @colorOne @colorOne @colorWhite;
}

.nav-tabs > li.active > a,
.nav-tabs > li.active > a:hover,
.nav-tabs > li.active > a:focus {
  color: @colorWhite;
  background-color: @colorFour;
  border: 1px solid @colorFour;
  border-bottom-color: transparent;
  cursor: default;
}

.popover-content {
    background-color: @colorFive;
    color: black;
    padding: .5em;
    font-size: 1em;
}

table > thead > tr, 
table > tbody > tr.titleRow {
    color: @colorWhite;
    background-color: @colorFour;
}

table.table-condensed {
  border: 1px solid @colorOne;    
}

.table-bordered >thead >tr >th,
.table-bordered >tbody >tr >td,
.table-bordered >tbody >tr >td {
  border: 1px solid @colorOne;
}

//No border except Bottom
.table-bordered >thead >tr >th.noBorderXB {
    border-top-style: hidden;
    border-right-style: hidden;
    border-left-style: hidden;
}

//No Bottom border
.table-bordered >tbody >tr >td.noBorderB {
    border-bottom-style: hidden;
}

//No Top & Bottom border
.table-bordered >tbody >tr >td.noBorderTB {
    border-top-style: hidden;
    border-bottom-style: hidden;
}

//No Top & Right border
.table-bordered >tbody >tr >td.noBorderTR {
    border-top-style: hidden;
    border-right-style: hidden;
}

//No Top, Bottom or Right border
.table-bordered >tbody >tr >td.noBorderTBR {
    border-top-style: hidden;
    border-bottom-style: hidden;
    border-right-style: hidden;
}

//No border except Top
.table-bordered >tbody >tr >td.noBorderXT {
    border-right-style: hidden;
    border-left-style: hidden;
    border-bottom-style: hidden;
}

/*********End Modified Standards ************/

